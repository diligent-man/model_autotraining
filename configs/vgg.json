{
    "PROJECT_NAME": "face_attribute",

    "DATA":
    {
        "PATH": "/home/trong/Downloads/Local/Source/python/semester_6/face_attribute/mega_age",
        "INPUT_SHAPE": [3, 224, 224],
        "TRAIN_SIZE": 0.9,
        "NUM_WORKERS": 4,
        "NUM_CLASSES": 5,
        "TRANSFORM":
        {
            "Resize":
            {
                "size": [224, 224],
                "interpolation": "BICUBIC",
                "antialias": true
            },

            "PILToTensor": {},

            "ToDtype":
            {
                "dtype": "float32",
                "scale": true
            },

            "RandomRotation":
            {
                "degrees": [-10, 10],
                "interpolation": "NEAREST"
            }
        },
        "TARGET_TRANSFORM": {}
    },

    "CHECKPOINT":
    {
        "SAVE": true,
        "LOAD": false,
        "SAVE_ALL": true,
        "SAVE_WEIGHT_ONLY": false,
        "INCLUDE_CONFIG": true,
        "RESUME_NAME": "epoch_1.pt"
    },

    "MODEL":
    {
        "BASE": "vgg",
        "NAME": "vgg11",
        "PRETRAINED_WEIGHT": false,
        "REMOVE_PRETRAINED_WEIGHT": false,
        "ARGS":
        {
            "num_classes": 5
        }

//        "NEW_CLASSIFIER_NAME":[
//            "Flatten",
//            "Dropout",
//            "Linear", "ReLU", "Dropout",
//            "Linear", "ReLU", "Dropout",
//            "Linear", "ReLU",
//            "Linear"
//        ],
//
//        "NEW_CLASSIFIER_ARGS":[
//            {"start_dim": 1},
//            {},
//            {"in_features": 25088, "out_features": 4096}, {}, {},
//            {"in_features": 4096, "out_features": 4096}, {}, {},
//            {"in_features": 4096, "out_features": 1000}, {},
//            {"in_features": 1000, "out_features": 2}
//        ]
    },

    "OPTIMIZER":
    {
        "NAME": "Adam",
        "ARGS":
        {
            "lr": 1e-6,
            "amsgrad": true,
            "weight_decay": 1e-7
        }
    },

    "LR_SCHEDULER":
    {
        "APPLY": true,
        "NAME": "CosineAnnealingWarmRestarts",
        "ARGS":
        {
            "T_0": 100,
            "T_mult": 3
        }
    },

    "METRICS":
    {
//        "NAME": ["BinaryAccuracy", "BinaryF1Score"],
        "NAME": ["MulticlassAccuracy", "MulticlassF1Score", "MulticlassPrecisionRecallCurve", "MulticlassAUROC", "MulticlassConfusionMatrix"],
        "ARGS":
        {
            "0":
            {
//                "threshold": 0.5
            },
            "1":
            {
//                "threshold": 0.5
            },

            "2":
            {
                "num_classes": 5
            },

            "3":
            {
                "num_classes": 5
            },

            "4":
            {
                "num_classes": 5
            }
        }
    },

    "LOSS":
    {
//        "NAME": "BCELoss",
        "NAME": "CrossEntropyLoss",
        "ARGS":
        {
            "reduction": "mean"
        }
    },

    "EARLY_STOPPING":
    {
        "APPLY": true,
        "ARGS":
        {
            "patience": 10,
            "min_delta": 0
        }
    },

    "LOGGING":
    {
        "STRATEGY": "epoch"
    },

    "SEED": 12345,
    "DEVICE": "cuda",
    "BATCH_SIZE": 128,
    "TRAINING_EPOCHS": 30,
//    "EVALUATION_STRATEGY": "no"
}