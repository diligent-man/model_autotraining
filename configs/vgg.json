{
    "PROJECT_NAME": "face_attribute",

    "DATA":
    {
        "PATH": "/home/trong/Downloads/Local/Source/python/semester_6/face_attribute/small_celeb_A",
        "INPUT_SHAPE": [3, 224, 224],
        "TRAIN_SIZE": 0.9,
        "NUM_WORKERS": 4,
        "NUM_CLASSES": 2,
        "TRANSFORM":
        {
            "Resize":
            {
                "size": [224, 224],
                "interpolation": "BICUBIC",
                "antialias": true
            },

            "PILToTensor": {},

            "ToDtype":
            {
                "dtype": "float32",
                "scale": true
            },

            "RandomRotation":
            {
                "degrees": [-10, 10],
                "interpolation": "NEAREST"
            }
        },
        "TARGET_TRANSFORM": {}
    },

    "CHECKPOINT":
    {
        "SAVE": false,
        "LOAD": false,
        "SAVE_ALL": false,
        "SAVE_WEIGHT_ONLY": false,
        "INCLUDE_CONFIG": false,
        "RESUME_NAME": "epoch_3.pt"
    },

    "MODEL":
    {
        "BASE": "googlenet",
        "NAME": "googlenet",
        "PRETRAINED_WEIGHT": true,
        "REMOVE_PRETRAINED_WEIGHT": false,

        "ARGS":
        {
//            "aux_logits": true,
//            "num_classes": 2
        },

        "NEW_CLASSIFIER_NAME":[
            "Flatten",
            "Dropout",
            "Linear", "ReLU", "Dropout",
            "Linear", "ReLU", "Dropout",
            "Linear", "ReLU",
            "Linear"
        ],

        "NEW_CLASSIFIER_ARGS":[
            {"start_dim": 1},
            {},
            {"in_features": 9216, "out_features": 4096}, {}, {},
            {"in_features": 4096, "out_features": 4096}, {}, {},
            {"in_features": 4096, "out_features": 1000}, {},
            {"in_features": 1000, "out_features": 2}
        ]
    },

    "OPTIMIZER":
    {
        "NAME": "Adam",
        "ARGS":
        {
            "lr": 1e-7,
            "amsgrad": true
        }
    },

    "LR_SCHEDULER":
    {
        "APPLY": true,
        "NAME": "CosineAnnealingWarmRestarts",
        "ARGS":
        {
            "T_0": 100,
            "T_mult": 3
        }
    },

    "METRICS":
    {
//        "NAME": ["BinaryAccuracy", "BinaryF1Score"],
//        "ARGS":
//        {
//            "0":
//            {
//                "threshold": 0.5
//            },
//
//            "1":
//            {
//                "threshold": 0.5
//            }
        "NAME": ["MulticlassAccuracy", "MulticlassF1Score"],
        "ARGS":
        {
            "0":
            {
                "num_classes": 2
            },

            "1":
            {
                "num_classes": 2
            }
        }
    },

    "LOSS":
    {
        "NAME": "CrossEntropyLoss",
//        "NAME": "BCELoss",
        "ARGS":
        {
            "reduction": "mean"
        }
    },

    "EARLY_STOPPING":
    {
        "APPLY": true,
        "ARGS":
        {
            "patience": 5,
            "min_delta": 0
        }
    },

    "LOGGING":
    {
        "STRATEGY": "epoch"
    },

    "SEED": 12345,
    "DEVICE": "cuda",
    "BATCH_SIZE": 32,
    "TRAINING_EPOCHS": 1,
    "EVALUATION_STRATEGY": "no"
}