{
    "PROJECT_NAME": "gender_classification",

    "DATA":
    {
        "INPUT_SHAPE": [3, 224, 224],
        "DATASET": "DefaultDataset",

        "TRAIN_DATASET_ARGS":
        {
            "root": "/home/trong/Downloads/Dataset/celeb_A/",
            "annotation": "/home/trong/Downloads/Dataset/celeb_A/train.csv"
        },

        "VAL_DATASET_ARGS":
        {
            "root": "/home/trong/Downloads/Dataset/celeb_A/",
            "annotation": "/home/trong/Downloads/Dataset/celeb_A/val.csv"
        },

        "TEST_DATASET_ARGS":
        {
            "root": "/home/trong/Downloads/Dataset/celeb_A/",
            "annotation": "/home/trong/Downloads/Dataset/celeb_A/test.csv"
        },

        "DATALOADER": "DefaultDataLoader",

        "TRAIN_DATALOADER_ARGS":
        {
            "batch_size": 440,
            "shuffle": true,
            "num_workers": 6,
            "drop_last": false,
            "pin_memory": true,
            "pin_memory_device": "cuda",
            "multiprocessing_context": "fork"
        },

        "NUM_CLASSES": 1,

        "TRANSFORM":
        {
            "Resize":
            {
                "size": [224, 224],
                "interpolation": "BICUBIC",
                "antialias": true
            },

            "PILToTensor": {},

            "ToDtype":
            {
                "dtype": "float32",
                "scale": true
            },

            "RandomRotation":
            {
                "degrees": [-10, 10],
                "interpolation": "NEAREST"
            }
        },

        "TARGET_TRANSFORM": {}
    },

    "CHECKPOINT":
    {
        "SAVE": true,
        "LOAD": false,
        "SAVE_ALL": true,
        "SAVE_WEIGHT_ONLY": false,
        "INCLUDE_CONFIG": true,
        "RESUME_NAME": "epoch_1.pt"
    },

    "MODEL":
    {
        "BASE": "resnet",
        "NAME": "resnet18",
        "GET_SUMMARY": false,
        "COMPILE": false,
        "PRETRAINED_WEIGHT": false,
        "REMOVE_PRETRAINED_WEIGHT": false,
        "ARGS":
        {
            "num_classes": 1
        }
    },

    "OPTIMIZER":
    {
        "NAME": "AdamW",
        "ARGS":
        {
            "lr": 1e-6,
            "amsgrad": true
        }
    },

    "LR_SCHEDULER":
    {
        "APPLY": true,
        "NAME": ["CosineAnnealingWarmRestarts"],
        "ARGS": [{"T_0": 10, "T_mult": 1}]
    },

    "METRIC":
    {
        "IN_TRAIN": true,
        "NAME": [
            "BinaryAccuracy",
            "BinaryF1Score",
            "BinaryPrecision",
            "BinaryRecall"
        ],

        "ARGS": [{}, {}, {}, {}]
    },

    "LOSS":
    {
        "NAME": "BCELoss",
        "ARGS":
        {
            "reduction": "mean"
        }
    },

    "EARLY_STOPPING":
    {
        "APPLY": true,
        "ARGS":
        {
            "patience": 5,
            "min_delta": 0
        }
    },

    "LOGGING":
    {
        "STRATEGY": "epoch"
    },

    "TENSORBOARD": {
        "APPLY": true,
        "INSPECT_MODEL": false,
        "TRACKING_METRIC": ["BinaryAccuracy", "BinaryF1Score", "BinaryPrecision", "BinaryRecall"]
    },

    "SEED": 12345,
    "DEVICE": "cuda",
    "TRAINING_EPOCHS": 100
//    "EVALUATION_STRATEGY": "no"
}
